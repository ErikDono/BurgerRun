<div class="row">
    <div class="card column" style="margin-right:10px; margin-left:50px; float: left; width:33.33%">
        <h2>to be eaten</h2>
        <ul>
            {{#each burgers}}
            {{#unless eaten}}
            {{> burgers/burger-block eaten=false}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="card column" style="margin-right:10px; margin-left:50px; float: left; width:33.33%">
        <h2>Burgers you've tried already</h2>
        <ul>
            {{#each burgers}}
            {{#if eaten}}
            {{this.burgerName}}<br><br>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<div class="card" style="margin-left:30%; margin-right:33.3%; margin-top: 20px">

    <h2>Make a new Burger</h2>
    <form class="create-burger" action="/api/burgers" method="POST">
        <div class="form-group">
            <label>Burger Name:</label>
            <input id="newburger" type="text" id="ca" name="name">
        </div>
        <div class="form-group">
            <label for="eaten" name="burger_eaten">Eat this right away?</label><br>
            <input type="radio" name="eaten" value="1" checked> I cant wait!<br>
            <input type="radio" name="eaten" value="0"> I can wait...
        </div>
        <button type="submit"> Add the burger to the menu! </button>
    </form>

</div>